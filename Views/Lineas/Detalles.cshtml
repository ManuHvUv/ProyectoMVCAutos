@model Linea
@{
    ViewData["Title"] = "Detalle de línea: " + Model.Nombre;
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            @*<img src=@imagePath asp-append-version="true" />*@
            <div class="card-body">
                <label>Linea</label>
                <h5 class="card-title" >@Model.Nombre</h5>
                <label>Precio</label>
                <h4 class="card-title">@Model.Precio.ToString("c")</h4>
                <label>Marca</label>
                <h4 class="card-title">@Model.Marca.Nombre</h4>
                <a asp-action="Index" class="btn btn-primary">Aceptar</a>
                <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div>