@model List<Marca>
@{
    ViewData["Title"] = "Marcas";
}

<h2>Listado de marcas</h2>
<a type="button" class="btn btn-success btn-sm" asp-action="Agregar"><i class="material-icons">add</i>Nueva marca</a>
<br />
<table class="table table-striped">
    <thead class="bg-success text-white text-center">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Logo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Marca item in Model)
        {
            <tr class="text-center">
                <th scope="row">@item.Id</th>
                <td>@item.Nombre</td>
                <td>@item.Logo</td>
                <td>
                    <a type="button" asp-action="Editar" asp-route-id="@item.Id" class="iconoVerde">
                        <i class="material-icons ">edit</i>
                    </a>
                    <a type="button" asp-action="Detalles" asp-route-id="@item.Id" class="iconoMorado">
                        <i class="material-icons">search</i>
                    </a>
                    <a type="button" asp-action="Eliminar" asp-route-id="@item.Id" class="iconoRojo">
                        <i class="material-icons">delete</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>